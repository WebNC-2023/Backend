{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      "error",
      80,
      { "ignoreComments": true },
      { "ignoreTemplateLiterals": true }
    ],
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }]
  }
}
